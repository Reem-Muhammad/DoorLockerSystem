#include "keypad.h"
#include "LCD.h"

uint8 password_counter = 0;
uint8 key = 0;

int main()
{
	LCD_init();

	LCD_goToRowCol(0,0);
	LCD_displayString("Please Enter New Pass:");
	LCD_goToRowCol(1,0);
	LCD_displayString("-----");

	while(1)
	{

		LCD_goToRowCol(1,0);
		while(password_counter < 5)
		{
			key = keypad_getPressedKey();
			_delay_ms(400);
			LCD_displayCharacter('*');
			password_counter++;
		}
		LCD_goToRowCol(0,0);
		LCD_displayString("Press '#' To Enter.");

	}
}
