/*static configurations*/
#define N_COL 3
#define N_ROW 4
#define N_BUTTONS (N_COL * N_ROW)
#define KEYPAD_PORT_DIR DDRB
#define KEYPAD_PORT_OUT PORTB
#define KEYPAD_PORT_IN PINB

#if 0
/*configure the column pins to be inputs*/
#define KEYPAD_DEACTIVATE (KEYPAD_PORT_DIR | 0xF0)
#endif

/*Function Prototype*/
uint8 keypad_getPressedKey(void);
void keypad_deactivate(void);

#endif /* KEYPAD_H_ */
