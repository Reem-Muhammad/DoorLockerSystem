#ifndef EEPROM_H_
#define EEPROM_H_

#include "std_types.h"

/*~~~~~~~~~~~ Type Definitions ~~~~~~~~~~~*/
typedef struct
{
	/*
	 * EEPROM base address
	 * EEPROM size
	 * maximum block sizes (write, erase) processed within the job processing function
	 * maximum read block sizes for normal and fast EEPROM mode processed within the job processing function
	 * call cycle of cyclic job processing function for read, write, erase
	 */
}Eep_ConfigType;


/*~~~~~~~~~~ Functions Definitions ~~~~~~~~~~~*/
void EEPROM_init();
uint8 Eep_readByte(uint16 address, uint8 *data);
uint8 Eep_writeByte(uint16 address, uint8 *data);

#endif /* EEPROM_H_ */
